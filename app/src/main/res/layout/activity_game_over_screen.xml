<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <TextView
        android:id="@+id/text_game_over"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textSize="30dp"
        android:text="Game Complete!"/>

    <TextView
        android:id="@+id/text_view_totalscore"
        android:layout_below="@+id/text_game_over"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/text_view_round_array_score"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_totalscore"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="16dp"/>


    <Button
        android:id="@+id/button_start_game"
        android:layout_below="@+id/text_view_round_array_score"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:text="Play Again"
        android:textSize="25sp" />

</RelativeLayout>

