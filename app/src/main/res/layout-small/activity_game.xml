<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <ImageButton
        android:id="@+id/button_dice_1"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="1dp"
        android:contentDescription="Dice 1"
        android:src="@drawable/grey1" />

    <ImageButton
        android:id="@+id/button_dice_2"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_alignTop="@+id/button_dice_1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="-2dp"
        android:contentDescription="Dice 2"
        android:src="@drawable/grey2" />

    <ImageButton
        android:id="@+id/button_dice_3"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_alignTop="@+id/button_dice_1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:contentDescription="Dice 3"
        android:src="@drawable/grey3" />

    <ImageButton
        android:id="@+id/button_dice_4"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="56dp"
        android:contentDescription="Dice 4"
        android:src="@drawable/grey4" />

    <ImageButton
        android:id="@+id/button_dice_5"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_alignStart="@+id/button_dice_2"
        android:layout_alignTop="@+id/button_dice_4"
        android:layout_marginStart="7dp"
        android:layout_marginTop="0dp"
        android:contentDescription="Dice 5"
        android:src="@drawable/grey5" />

    <ImageButton
        android:id="@+id/button_dice_6"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_alignTop="@+id/button_dice_4"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="17dp"
        android:contentDescription="Dice 6"
        android:src="@drawable/grey6" />

    <TextView
        android:id="@+id/points_text_view"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="66dp"
        android:layout_marginBottom="200dp"
        android:layout_toEndOf="@+id/button_throwdice" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="166dp"
        android:layout_marginBottom="279dp"></Spinner>

    <Button
        android:id="@+id/button_throwdice"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="9dp"
        android:text="Throw Dice"
        android:textSize="8dp" />

    <Button
        android:id="@+id/button_make_selection"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/button_throwdice"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-120dp"
        android:layout_marginBottom="9dp"
        android:text="Gather Points"
        android:textSize="8dp" />

</RelativeLayout>